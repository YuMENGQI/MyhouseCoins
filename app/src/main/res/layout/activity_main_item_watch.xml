<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/plus_score"
        android:text="@string/_10_"
        android:layout_centerVertical="true"
        android:textColor="@color/text_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/my_task_title"
        android:text="@string/watch"
        android:textColor="@color/text_black"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/plus_score" />

    <TextView
        android:id="@+id/my_task_describtion"
        android:text="@string/watchvideo"
        android:maxWidth="170dp"
        android:textColor="@color/gray_no_effect"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/my_task_button"
        android:layout_toEndOf="@+id/plus_score" />

    <Button
        android:id="@+id/my_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/tv_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="7dp"
        android:paddingTop="4dp"
        android:paddingEnd="7dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="20dp"
        android:text="@string/towatch"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <View
        android:id="@+id/divide_line"
        style="@style/line_separator"
        android:layout_below="@+id/my_task_describtion" />

</RelativeLayout>